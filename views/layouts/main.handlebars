</head>

<body>
  <nav class="navbar navbar-expand-lg navbar p-3 bg-info d-flex justify-content-between fixed-top" id="headerNav">
    <div class="d-flex align-items-center">
      <img src="/assets/logo.png" alt="logo" width="40" height="40">
      <a class="nav-link mx-2 active border border-warning" aria-current="page" href="/">BiteBits</a>
    </div>
    <div class="d-flex align-items-center">
      <a class="nav-link mx-2 border border-warning" href="/restaurant">Restaurants</a>
    </div>
    <ul class="nav-item">
      <a class="nav-link mx-1" href="#">
        {{#if loggedIn}}
        <button id="logout" class="btn-no-style">Logout</button>
        {{else}}
        <a class="border border-warning" href="/login">Login</a>
        {{/if}}
        {{#if loggedIn}}
        <script src="/js/logout.js"></script>
        {{/if}}
      </a>
    </ul>
  </nav>

  <main class="mt-5 pt-5
">
    {{{body}}}
  </main>

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
